    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="100sp"/>
            <stroke android:color="#EEEEEE"/>
            <solid android:color="#EEEEEE"/> <!-- White background for selected option -->
<!--            <stroke android:width="2dp" android:color="#DADADA"/> &lt;!&ndash; Optional border &ndash;&gt;-->
            <shadowColor android:color="#BDBDBD"/>
        </shape>
    </item>

