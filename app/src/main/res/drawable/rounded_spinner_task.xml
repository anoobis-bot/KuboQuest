<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#EEEEEE"/> <!-- Background color -->
            <stroke android:width="1dp" android:color="#C4C4C4"/> <!-- Border color and width -->
            <corners android:radius="12sp"/> <!-- Adjust radius for rounded corners -->
            <padding
                android:left="2dp"
                android:right="10dp"
                android:top="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>

    <item>
        <bitmap
            android:src="@drawable/ic_dropdown"
            android:gravity="right"/>
    </item>

</layer-list>