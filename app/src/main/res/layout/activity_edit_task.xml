<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".EditTaskActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintWidth_percent="0.90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:gravity="center"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Task"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Name"
                    android:textColor="#797C7B"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:textSize="11sp"
                    android:background="@drawable/rounded_edittext_task" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#797C7B"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textSize="11sp"
                    android:gravity="start"
                    android:background="@drawable/rounded_edittext_task" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textColor="#797C7B"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_bold"/>

                <TextView
                    android:id="@+id/addDateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:textSize="11sp"
                    android:background="@drawable/rounded_datepicker_task" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequency"
                    android:textColor="#797C7B"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_bold"/>

                <Spinner
                    android:id="@+id/frequencySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@drawable/rounded_spinner_task"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty"
                    android:textColor="#797C7B"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_bold"/>

                <Spinner
                    android:id="@+id/difficultySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@drawable/rounded_spinner_task"/>
            </LinearLayout>

            <Button
                android:id="@+id/editTaskBtn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#24B874"
                android:text="Edit Task"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:padding="0dp"/>

            <Button
                android:id="@+id/deleteTaskBtn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#B84424"
                android:text="Delete Task"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:layout_marginBottom="32dp"
                android:padding="0dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>