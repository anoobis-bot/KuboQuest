<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_radiobutton">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="123sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@color/whiteBG"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#FEFEFE"
                    android:orientation="horizontal">

                    <!-- Tomato -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/plantBox1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <View
                                android:layout_width="85dp"
                                android:layout_height="85dp"
                                android:background="@drawable/gray_ellipse" />

                            <!-- Tomato 8Image -->
                            <ImageView
                                android:id="@+id/plantImg1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:contentDescription="Tomato"
                                android:scaleType="centerCrop"
                                android:src="@drawable/fruit_tomato" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/plantName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:maxWidth="90dp"
                            android:maxLines="1"
                            android:text="Tomato"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Lima Beans-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/plantBox2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <View
                                android:layout_width="85dp"
                                android:layout_height="85dp"
                                android:background="@drawable/gray_ellipse" />

                            <ImageView
                                android:id="@+id/plantImg2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:contentDescription="Lima Beans"
                                android:scaleType="centerCrop"
                                android:src="@drawable/question_mark" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/plantName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:maxWidth="90dp"
                            android:maxLines="1"
                            android:text="Lima Beans"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Winter Melon -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/plantBox3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <View
                                android:layout_width="85dp"
                                android:layout_height="85dp"
                                android:background="@drawable/gray_ellipse" />

                            <ImageView
                                android:id="@+id/plantImg3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:contentDescription="Winter Melon"
                                android:scaleType="centerCrop"
                                android:src="@drawable/question_mark" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/plantName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:maxWidth="90dp"
                            android:maxLines="1"
                            android:text="Winter Melon"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>